<section class="container">
  <%= form_for(product, :html => {:class => 'form'}) do |f| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, 'Nombre' %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description, 'DescripciÃ³n' %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price, 'Precio' %>
      <%= f.number_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :wholesale_price, 'Precio mayoreo' %>
      <%= f.number_field :wholesale_price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :stock, 'Inventario' %>
      <%= f.number_field :stock, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :photo, 'Fotografia del producto'%>
      <%= f.file_field :photo%>
    </div>

    <div class="row">
      <div class="">
        <div class="col-xs-12 col-md-6 form-group">
          <%= f.label :supplier_id, 'Proveedor' %>
          <%= collection_select(:product, :supplier_id, Supplier.all, :id, :name ) %>
        </div>

        <div class="col-xs-12 col-md-6 form-group">
          <%= f.label :brand_id, 'Marca' %>
          <%= collection_select(:product, :brand_id, Brand.all, :id, :name ) %>
        </div>      
      </div>
    </div>


    <div class="actions">
      <%= f.submit 'Guardar', class: 'btn btn-lg btn-success' %>
    </div>
  <% end %>
</section>
